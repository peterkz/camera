<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:paddingTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#eeeeee"
        android:layout_centerInParent="true" >

        <ProgressBar
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/video_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="10dp"
            android:layout_below="@+id/video_loading_progress"
            android:id="@+id/video_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在注册···"
            android:textColor="#000000"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_bacground"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/login_button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:src="@mipmap/close"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:paddingTop="13dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="13dp"
            android:background="#f4f4f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/r1_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/username"/>
            <EditText
                android:id="@+id/username_register"
                android:layout_toRightOf="@+id/r1_image"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号/邮箱"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_below="@+id/r1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="13dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="13dp"
            android:background="#f4f4f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/r2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="16dp"
                android:src="@mipmap/password"/>
            <EditText
                android:id="@+id/pwd_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/r2_image"
                android:hint="密码"
                android:password="true"
                android:focusable="true"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:maxLines="1" android:singleLine="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_below="@+id/r2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="13dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="13dp"
            android:background="#f4f4f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="16dp"
                android:src="@mipmap/password"/>
            <EditText
                android:id="@+id/auth_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:hint="验证码"
                android:numeric="integer"
                android:focusable="true"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:maxLines="1" android:singleLine="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r4"
            android:layout_below="@+id/r3"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/rememberPwd"
                android:layout_toLeftOf="@+id/rememberR"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:src="@mipmap/chance2"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/rememberR"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rememberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"/>
                <TextView
                    android:layout_toRightOf="@+id/rememberText"
                    android:id="@+id/xieyi"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《旮旯眼用户协议》"/>
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/r5"
            android:layout_below="@+id/r4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/get_code"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="13dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/login_button_background"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>
            <TextView
                android:id="@+id/register"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="13dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/login_button_background"
                android:layout_height="wrap_content"
                android:text="注  册"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
