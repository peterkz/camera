<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <ImageView
        android:id="@+id/imageView_device"
        android:background="@drawable/video_placeholder"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <ImageView
        android:background="@mipmap/play"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/shareR"
        android:layout_alignParentTop="true"
        android:background="@drawable/mediacontroller_bg"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:visibility="visible">
        <TextView
            android:id="@+id/shareText"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="共享数：0"/>
        <TextView
            android:id="@+id/joinText"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="已参加"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/media_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/mediacontroller_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="名称：摄像头名称"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【在线】"
                android:layout_centerVertical="true"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/online"
                android:paddingRight="10dp"
                android:text="12345678910"
                android:layout_centerVertical="true"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>